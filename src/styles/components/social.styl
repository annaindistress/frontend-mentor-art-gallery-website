.social
    display flex
    flex-wrap nowrap
    margin 0
    padding 0
    list-style none

    &__item
        margin-right 20px
        width 20px
        height 20px

        &:last-of-type
            margin-right 0

    &__link
        display block
        width 100%
        height 100%

        &--light
            color color-white

            &:hover,
            &:focus
                color color-gold

        &--dark
            color color-black

            &:hover,
            &:focus
                color color-white

    &__icon
        width 20px
        height 20px
        fill currentColor
